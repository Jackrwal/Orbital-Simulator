<Window x:Class="OrbitalSimulator_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrbitalSimulator_UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.Background>
            <ImageBrush TileMode="Tile" ImageSource="Resources/Images/Star-Background.png" Viewport="0,0,100,100" ViewportUnits="Absolute"/>
        </Grid.Background>
        
        
        <Frame x:Name="MainContainer" Content="{Binding CurrentPage, Converter={local:ApplicationPageConverter}}">

        </Frame>


    </Grid>

</Window>
